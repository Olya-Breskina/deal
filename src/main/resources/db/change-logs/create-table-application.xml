<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-application"
               author="Подгорецкая">

        <createTable tableName="application">
            <column name="application_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"  foreignKeyName="application_client_id" references="client(client_id)" />
            </column>
            <column name="credit_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="application_credit_id" references="credit(credit_id)" />
            </column>
            <column name="status" type="varchar(512)">
            </column>
            <column name="creation_date" type="time">
            </column>
            <column name="applied_offer" type="jsonb">
            </column>
            <column name="sigh_date" type="time">
            </column>
            <column name="ses_code" type="varchar(512)">
            </column>
            <column name="status_history" type="jsonb"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
