<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-client"
               author="Подгорецкая">

        <createTable tableName="client">
            <column name="client_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="last_name" type="varchar(512)">
            </column>
            <column name="first_name" type="varchar(512)">
            </column>
            <column name="middle_name" type="varchar(512)">
            </column>
            <column name="birthdate" type="date">
            </column>
            <column name="email" type="varchar(512)">
            </column>
            <column name="gender" type="varchar(512)">
            </column>
            <column name="marital_status" type="varchar(512)">
            </column>
            <column name="dependent_amount" type="int">
            </column>
            <column name="passport" type="jsonb">
            </column>
            <column name="employment" type="jsonb">
            </column>
            <column name="account" type="varchar(512)">
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>